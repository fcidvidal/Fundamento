package test_entrada_arreglo3;
import java.util.Scanner;
/**
 *
 * @author dci
 */
public class Test_entrada_arreglo3 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner gl = new Scanner(System.in);
        int alumno, i, j, n_alum = 0, numero=0, k, min=0, max=0, suma=0, nota;
        double prom=0;
        int N;
        System.out.println("Ingrese numero de alumnos");
        N = gl.nextInt();
        
        
        int cant_notas;
        int numeros[] = new int[N];
        
        
        for (i=0 ; i < N; i++) {
            System.out.println("Ingrese cantidad de notas del alumno nº "+(i+1)); 
            cant_notas = gl.nextInt();
            suma = 0;
            for (j = 0; j < cant_notas; j++) {
                System.out.println("Ingrese la nota nº "+(j+1));
                numeros[i]=gl.nextInt();
                suma = suma + numeros[i];
            }
            
            nota =+ 1;   
            System.out.println("Nota "+nota+" = "+numeros[i]);
            
            prom = (double) suma / N;
            
              
        
            System.out.println("El promedio del Alumno "+(i+1)+" es: "+prom);
           
            min = numeros[0];
            for (k = 0; k < N ; k++){
                if(min > numeros[i]){
                    min = numeros[i];      
                }
            }
             System.out.println("La nota minima de el Alumno "+(i+1)+" es de: "+min);
            
            max = numeros[0];
            for (k = 0; k < N; k++) {
                if(max<numeros[i]) {
                    max = numeros[i];
             }
            }
            System.out.println("La nota máxima de el Alumno "+(i+1)+" es de: "+max);
        
            
            
        
            }    
    }
}
     

