package arreglos_3;
import java.util.Scanner;
/**
 *
 * @author Francisco
 */
public class Arreglos_3 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
       Scanner gl = new Scanner(System.in);
    int nota, alumno, i, j;
    
    float prom=0, suma = 0, sumanotas=0;
    int max, min;
    
    
        System.out.println("Ingrese la cantidadd de alumnos");
        alumno = gl.nextInt();
        
        System.out.println("Ingrese la cantidad de notas");
        nota = gl.nextInt();
        
    int [][] Numeros = new int[alumno][nota];
    
    for(i=0; i<alumno; i++){
        for(j=0; j<nota; j++){
            System.out.println("Ingrese la nota "+(j+1)+" del alumno "+(i+1));
            Numeros[i][j] = gl.nextInt();
            
        }
    }
    
    for(i=0; i<alumno; i++){
        System.out.println("Las notas del alumno "+(i+1));
        for(j=0; j<nota; j++){
            System.out.print(Numeros[i][j]+" ");
        }
        System.out.println("");
    }
    
    
    for(i=0; i<alumno; i++){
        suma= 0;
        max = Numeros[i][0];
        min = Numeros[i][0];
        for(j=0; j<nota; j++){
         suma = suma + Numeros[i][j];   
         
         if(max < Numeros[i][j]){
             max = Numeros[i][j];
         }if(min > Numeros[i][j]){
             min = Numeros[i][j];
         }
        }
        
        prom = suma / nota;
        
        System.out.println("El promedio del alumno "+(i+1)+" es: "+prom);
        System.out.println("Sus notas minimas y maximas son: "+min+"-"+max);
    }
    
    
    
    
    }
    
}


    

