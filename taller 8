package taller_8;

import java.io.*;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.util.Scanner;


public class Archivo {

    String ruta = "/home/dci/Escritorio/Taller_8/src/taller_8/ejemplo";
    String text = "";
    Path file = Paths.get(ruta);

    public void contarLineas() {

        try {

            BufferedReader br = new BufferedReader(new FileReader(ruta));

            String linea;
            int i, cont = 0;

            while ((linea = br.readLine()) != null) {
                System.out.println(linea);
                for (i = 0; i < linea.length(); i++) {
                    if (i == 0) {
                        if (linea.charAt(i) != ' ') {
                            cont++;
                        } else {
                            if (linea.charAt(i - 1) == ' ') {
                                if (linea.charAt(i) != ' ') {
                                    cont++;
                                }
                            }
                        }
                    }
                }
            }
            System.out.println("\nEl archivo contiene .txt " + cont + " lÃ­neas.");

        } catch (IOException a) {
            System.out.println(a);
        }

    }

    public void contarPalabras() {

        File archivo = null;
        try {
            archivo = new File("/home/dci/Escritorio/Taller_8/src/taller_8/ejemplo");
            String linea;
            FileReader fr = new FileReader(archivo);
            BufferedReader br = new BufferedReader(fr);
            int i, j, cont = 0;
            while ((linea = br.readLine()) != null) {
                for (i = 0; i < linea.length(); i++) {
                    if (i == 0) {
                        if (linea.charAt(i) != ' ') {
                            cont++;
                        }
                    } else {
                        if (linea.charAt(i - 1) == ' ') {
                            if (linea.charAt(i) != ' ') {
                                cont++;
                            }
                        }

                    }
                }
            }

            System.out.println("El archivo .txt contiene " + cont + " palabras");

            fr.close();
        } catch (IOException a) {
            System.out.println(a);
        }
    }

    public void contarCaracter() {
        File archivo = null;
        try {
            archivo = new File("/home/dci/Escritorio/Taller_8/src/taller_8/ejemplo");
            String linea;
            FileReader fr = new FileReader(archivo);
            BufferedReader br = new BufferedReader(fr);
            
            

            System.out.println("El archivo .txt contiene " + (archivo.length()) + " caracteres");

            fr.close();
        } catch (IOException a) {
            System.out.println(a);
        }
    }

}

























