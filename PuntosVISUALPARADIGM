package com.mycompany.asociacion;

/**
 *
 * @author dci
 */
public class Punto {
    private int ejeX;
    private int ejeY;

    
    public Punto(){
        this.ejeX = 0;
        this.ejeY = 0;
    }
    
    public Punto(int x, int y) {
        this.ejeX = x;
        this.ejeY = y;
    }

    @Override
    public String toString() {
        return "Punto(" + ejeX + "," + ejeY + ')';
    }
    
    
    public void crearPunto(){
        System.out.println("Punto creado en la coordenada "+ejeX+","+ejeY);
    }
    
    
}


