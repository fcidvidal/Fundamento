package taller4_ej4;

public class Camino {
    private int moneda = 0;
    String ra = "OH, me quedo en el edificio RA";
    String r1 = "OH, me quedo en el edificio R1";
    String d = "OH, me quedo en el edificio D";
    String e = "OH, me quedo en el edificio E";
    String dis = "OH, me quedo en el edificio DCI";
    
    public Camino(int moneda) {
        this.moneda = moneda;
    }

    public int getMoneda() {
        return moneda;
    }

    public void setMoneda(int moneda) {
        this.moneda = moneda;
    }
    
    public String getRa() {
        return ra;
    }

    public void setRa(String ra) {
        this.ra = ra;
    }

    public String getR1() {
        return r1;
    }

    public void setR1(String r1) {
        this.r1 = r1;
    }

    public String getD() {
        return d;
    }

    public void setD(String d) {
        this.d = d;
    }

    public String getE() {
        return e;
    }

    public void setE(String e) {
        this.e = e;
    }

    public String getDis() {
        return dis;
    }

    public void setDis(String dis) {
        this.dis = dis;
    }
    
     
