 package taller4_ej4;

public class camino2 {
  public int moneda = 0;
  String r1 = "OH, me quedo en el edificio R1";

    public camino2(int moneda) {
        this.moneda = moneda;
    }

    public int getMoneda() {
        return moneda;
    }

    public void setMoneda(int moneda) {
        this.moneda = moneda;
    }

    public String getR1() {
        return r1;
    }

    public void setR1(String r1) {
        this.r1 = r1;
    }
   
  
    
    
    
     public void camino2 extends camino(){
     do {  
        System.out.println("\nVoy a tirar la moneda");
        moneda = (int)((Math.random()*2)+1);
        
         if (moneda == 1){
            System.out.println(r1);
        }
        if (moneda == 2){
            System.out.println("Voy a avanzar al siguiente edificio");
        }
     }while (moneda == 1);
    }
    
    
}

        
        
        

   

