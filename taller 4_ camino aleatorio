package taller4_ej4;


public class Taller4_ej4 {
    

   
    public static void main(String[] args) {
        
    int moneda=0;
    
    
    Camino random = new Camino(moneda);
    
    
    random.camino1();
    
    random.camino3();
    random.camino4();
    random.camino5();
           
}
